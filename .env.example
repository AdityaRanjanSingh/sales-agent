# ===================================
# REQUIRED - Core Services
# ===================================

# OpenAI API Key - Required for AI agent functionality
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# LangChain Configuration - Required for Edge functions
# Set to false to ensure tracing finishes in serverless environment
LANGCHAIN_CALLBACKS_BACKGROUND=false

# ===================================
# REQUIRED - Authentication (Clerk)
# ===================================

# Clerk Publishable Key - Used by the frontend
# Get from: https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."

# Clerk Secret Key - Used by the backend
CLERK_SECRET_KEY="sk_test_..."

# Clerk Routes - Define authentication paths
CLERK_SIGN_IN_URL="/sign-in"

# ===================================
# REQUIRED - Brochure Storage (Supabase)
# ===================================

# Supabase URL - Your project URL
# Get from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL="https://xxx.supabase.co"

# Supabase Service Role Key - For server-side storage access
# IMPORTANT: Use the service_role key, not the anon key
SUPABASE_PRIVATE_KEY="eyJ..."

# ===================================
# OPTIONAL - Gmail Webhooks
# ===================================

# Gmail Webhook Security Token
# Generate a random secure token for webhook authentication
# Example: openssl rand -base64 32
# GMAIL_WEBHOOK_TOKEN="your-secure-random-token-here"

# Application Public URL - Required for webhooks to work
# Set this to your production URL when deploying
# NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"

# ===================================
# OPTIONAL - Advanced Configuration
# ===================================

# LangSmith Tracing - For debugging and monitoring
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY="lsv2_pt_..."
# LANGCHAIN_PROJECT="sales-agent"

# Google Cloud Configuration - Only needed for programmatic Pub/Sub setup
# GOOGLE_CLOUD_PROJECT_ID="your-project-id"
# PUBSUB_TOPIC_NAME="gmail-notifications"
# PUBSUB_SUBSCRIPTION_NAME="gmail-webhook-subscription"